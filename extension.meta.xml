<?xml version="1.0" encoding="UTF-8"?>
<extension id="sodium_encrypted_input" status="released" xmlns="http://getsymphony.com/schemas/extension/1.0">
	<name>Encrypted Input (Sodium)</name>
	<description>Encrypts text fields using `sodium` to keep them safe in case of a compromised Database.</description>
	<repo type="github">https://github.com/animaux/sodium_encrypted_input</repo>
	<types>
		<type>Security</type>
		<type>Encryption</type>
	</types>
	<authors>
		<author>
			<name github="symphonists" symphony="community">Symphony Community</name>
			<website>http://www.getsymphony.com</website>
		</author>
		<author>
			<name github="nickdunn" symphony="nickdunn">Nick Dunn</name>
			<website>http://nick-dunn.co.uk</website>
		</author>
		<author>
			<name github="animaux" symphony="animaux">Alexander Rutz</name>
			<website>http://animaux.de</website>
		</author>
	</authors>
	<releases>
	  <release version="1.0.0" date="2023-04-12" min="2.7.10" max="2.x.x">
			- Initial release using Symmetric Encryption/Decryption with Sodium instead of MCrypt (requires PHP 7.2+)
		</release>
	</releases>
</extension>
